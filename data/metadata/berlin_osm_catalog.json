  "spatial_queries": {
    "examples": [
      {
        "query": "Find all hospitals within 500m of a park",
        "sql": "SELECT h.name, h.geometry FROM vector.osm_hospitals h JOIN vector.osm_parks p ON ST_DWithin(h.geometry::geography, p.geometry::geography, 500)"
      },
      {
        "query": "Find public toilets near transport stops (within 100m)",
        "sql": "SELECT t.name, t.geometry FROM vector.osm_toilets t JOIN vector.osm_transport_stops s ON ST_DWithin(t.geometry::geography, s.geometry::geography, 100)"
      },
      {
        "query": "Count pharmacies within 1km of each hospital",
        "sql": "SELECT h.name as hospital, COUNT(p.osm_id) as pharmacy_count FROM vector.osm_hospitals h LEFT JOIN vector.osm_pharmacies p ON ST_DWithin(h.geometry::geography, p.geometry::geography, 1000) GROUP BY h.name"
      },
      {
        "query": "Find the nearest fire station to each school",
        "sql": "SELECT DISTINCT ON (s.osm_id) s.name as school, f.name as nearest_fire_station, ST_Distance(s.geometry::geography, f.geometry::geography) as distance_m FROM vector.osm_schools s CROSS JOIN vector.osm_fire_stations f ORDER BY s.osm_id, ST_Distance(s.geometry::geography, f.geometry::geography)"
      }
    ]
  },
